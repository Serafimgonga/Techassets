datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  ACTIVO
  DESACTIVO
}

//relacionamento 1 -> N

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  status    Status   @default(ACTIVO)
  report    Report[]
}

model Report {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  status    Status   @default(ACTIVO)
}

//aluno pertence a uma data turma e uma turma pertence a uma sala

//aulas -> turma

enum Sexo {
  Masculino
  Femenino
}

enum TipoDoc {
  BI
  PASSAPORT
}

model Documento {
  id          Int      @id @default(autoincrement())
  tipo        TipoDoc  @default(BI)
  numDoc      String
  foto        String
  idAluno       Int
  aluno   Documento @relation(fields: [idAluno], references: [id])
  dataExpira DateTime
  dataRegisto DateTime @default(now())
  status      Status   @default(ACTIVO)
}

// aluno 1 -> 1
model Aluno {
  id          Int       @id @default(autoincrement())
  nome        String
  sobreNome   String
  email       String?
  documento Documento[]
  sexo        Sexo      @default(Masculino)
  dataRegisto DateTime  @default(now())
  status      Status    @default(ACTIVO)
}

model turma {
  id   Int    @id @default(autoincrement())
  nome String
  sala
}

model turma {
}

model sala {
  id Int @id @default(autoincrement())
}

model Class {
  id          Int      @id @default(autoincrement())
  class       String
  dataRegisto DateTime @default(now())
  status      Status   @default(ACTIVO)
}
