datasource db {
  provider = "mysql"
  url       = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status{
  ACTIVO
  DESACTIVO
}

//relacionamento 1 -> N

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  createdAt DateTime @default(now())
  status Status @default(ACTIVO)
  report Report[]
}

model Report{
  id Int @id @default(autoincrement())
  descricao String
  userId Int 
  user User @relation(fields:[userId], references: [id])
  status Status @default(ACTIVO)
}
